# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGODB_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/neomeet?retryWrites=true&w=majority

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Server Configuration
PORT=8000
NODE_ENV=development

# Frontend URL (for CORS) - use your deployed frontend URL in production
FRONTEND_URL=http://localhost:3000
# Production example: FRONTEND_URL=https://your-app.vercel.app
